@page "/publications/create"
@rendermode InteractiveServer
@inject DailyDeBugle.Services.IPublicationService PublicationService
@inject NavigationManager Nav
@using DailyDeBugle.Models

<h3>Create New Publication</h3>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}

<EditForm Model="@newPublication"
          OnValidSubmit="HandleValidSubmit"
          FormName="CreatePublicationForm">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label>Publication Name:</label>
        <InputText @bind-Value="newPublication.Name" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Description:</label>
        <InputTextArea @bind-Value="newPublication.Description" class="form-control" rows="3" />
    </div>

    <button class="btn btn-primary" type="submit">Create</button>
</EditForm>



@code {
    private Publication newPublication = new();
    private string? errorMessage;

    private async Task HandleValidSubmit()
    {
        try
        {
            await PublicationService.CreatePublicationAsync(newPublication);
            Nav.NavigateTo("/publications");
        }
        catch (InvalidOperationException ex)
        {
            errorMessage = ex.Message;
        }
    }
}